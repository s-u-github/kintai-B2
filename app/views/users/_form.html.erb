<%= form_for(@user) do |f| %>  <!-- 新規か既存オブジェクトかを確認し、新規ならPOST、既存ならPATCHリクエストが使われる -->
  <%= render 'shared/error_messages', object: @user %>   <!-- 登録失敗時のエラーメッセージ -->
  
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>
  
  <%= f.label :department %>
  <%= f.text_field :department, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %> <!-- 新規と更新で表示を変えるためyieldメソッドに引数を渡している -->
<% end %>
