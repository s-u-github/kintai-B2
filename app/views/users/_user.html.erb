<li>
  <!-- 現在のユーザーが管理者(admin属性がtrue)の場合に限り -->
  <!--< if current_user.admin? && !current_user?(user) %>-->

  <%= user.name %>
    <div>
      | <%= link_to "削除", user, method: :delete, data: {confirm: "削除してよろしいですか？"}, class: "btn btn-primary" %>
    </div>
  
    <div class="panel-group" id="accordion">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#accordion" href="#collapse-<%= user.id %>" class="btn btn-a btn-primary">
              編集
            </a> <!-- user.idでアコーディオンを紐付け -->
          </h4>
        </div> <!-- panel-heading -->
          <div id="collapse-<%= user.id %>" class="panel-collapse collapse">
            <div class="panel-body">
              <%= form_for user, url: update_index_user_path(user), method: :patch do |f| %>
              <% @user = User.find(user.id) %>
              <%= render 'shared/error_messages' %>   <!-- 登録失敗時のエラーメッセージ -->
              
                <!-- 名前 -->
                <%= f.label :name %>
                <%= f.text_field :name, class: 'form-control' %>
  
                <!-- メールアドレス -->
                <%= f.label :email %>
                <%= f.email_field :email, class: 'form-control' %>
  
                <!-- 所属 -->
                <%= f.label :department %>
                <%= f.text_field :department, class: 'form-control' %>
  
                <!-- 社員番号 -->
                <%= f.label :code %>
                <%= f.text_field :code, class: 'form-control' %>
  
                <!-- カードID -->
                <%= f.label :card_id %>
                <%= f.text_field :card_id, class: 'form-control' %>
                
                <!-- パスワード -->
                <%= f.label :password %>
                <%= f.password_field :password, class: 'form-control' %>
  
                <!-- パスワード確認 -->
                <%= f.label :password_confirmation %>
                <%= f.password_field :password_confirmation, class: 'form-control' %>
  
                <!-- 基本勤務時間 -->
                <%= f.label :basic_time %>
                <%= f.time_field :basic_time, class: 'form-control' %>
  
                <!-- 指定勤務開始時間 -->
                <%= f.label :work_time %>
                <%= f.time_field :work_time, class: 'form-control' %>
  
                <!-- 指定勤務終了時間 -->
                <%= f.label :work_time_finish %>
                <%= f.time_field :work_time_finish, class: 'form-control' %>
  
                <%= f.submit '編集する', class: "btn btn-primary" %>
              <% end %>
            </div> <!-- panel-body -->
          </div> <!-- id="collapse -->
      </div> <!-- panel panel-default -->
    </div> <!-- panel-group -->
  <!--< end %> <!-- if current_user.admin? -->
</li>